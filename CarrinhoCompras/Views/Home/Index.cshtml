    <div class="row-fluid">
        <div class="span8">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Código do produto</th>
                        <th>Título</th>
                        <th>Autor da obra</th>
                        <th>Quantidade</th>
                        <th>Preço</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: Livros">
                    <tr>
                        <td data-bind="text: id"></td>
                        <td data-bind="text: titulo"></td>
                        <td data-bind="text: autor"></td>
                        <td data-bind="text: quantidade"></td>
                        <td data-bind="text: preco"></td>
                        <td>
                            <input class="input-mini" type="text" placeholder=".Preencha o campo" data-bind="value: quantidadeItensSelecionados"/>
                        </td>
                        <td>
                            <button class="btn btn-primary" type="button" data-bind='click: $parent.Carrinho.add'>Adicionar</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="span8">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Produtos</th>
                        <th>Subtotal</th>
                        <th>quantidade</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: Carrinho.items">
                    <tr>
                        <td data-bind="text: $index()+1"></td>
                        <td data-bind="text: produto.titulo"></td>
                        <td data-bind="text: subtotal()"></td>
                        <td data-bind="text: quantidade"></td>
                        <td>
                            <button class="btn btn-primary" type="button" data-bind='click: $parent.Carrinho.remove'>Remover</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <table class="table">
                <tr class="success">
                    <td>
                        Valor total da compra: <span data-bind='text: Carrinho.somaTotal()'> </span>
                    </td>
                    <div class="span8">
                        <td>
                            <button class="btn btn-primary" type="button" data-bind='click: Carrinho.checkOut'>Fechar pedido</button>
                        </td>
                        </div>
</tr>
            </table>
            
        </div>
    </div>

